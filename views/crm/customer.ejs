<html>
    <head>
        <%- include("../header.ejs"); %>
    </head>
    <body>
        <%- include("../menu.ejs"); %>
            <!-- Button to Open the Modal -->
            <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                Open modal
            </button> -->
        <div class="container-fluid" id="app-customer">
            <div class="m-3 text-center">
                <h3>Chăm sóc khách hàng</h3>
            </div>
            <div class="">
                <input class="form-control" placeholder="Nhập thông tin khách">
            </div>
            <div class="p-3">
                <table class="table table-bordered">
                    <tr>
                        <th>Tên</th>
                        <th>Doanh số</th>
                        <th>Xem</th>
                    </tr>
                    <tr v-for="customer in customers">
                        <td>{{customer.name}}</td>
                        <td class="text-right">{{numberWithCommas(customer.totalRevenue)}}</td>
                        <td><a :href="'/customer/detail?code=' + customer.code">Xem thêm</a></td>
                    </tr>
                </table>
            </div>
        
            <!-- The Modal -->
            <div class="modal" id="myModal">
                <div class="modal-dialog modal-xl">
                <div class="modal-content">
            
                    <!-- Modal Header -->
                    <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
            
                    <!-- Modal body -->
                    <div class="modal-body">
                    Modal body..
                    </div>
            
                    <!-- Modal footer -->
                    <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
            
                </div>
                </div>
            </div>
        </div>
        <script src="js/customer.js"></script>
    </body>
</html>